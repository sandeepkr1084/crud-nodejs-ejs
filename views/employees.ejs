<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Employees</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
</head>

<body>
    <div class="container" style="margin-top: 50px;">
      <a href="/add-employee" class="btn btn-sm btn-success" style="float: right;">Add</a>
        <table border="1" class="table">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Action</th>
            </tr>

            <% data.forEach((item) => {%>
                <tr>
                  <td>
                    <%= item.name %>
                  </td>
                  <td>
                    <%= item.email %>
                  </td>
                  <td>
                    <a href="/delete?id=<%= item._id %>" class="btn btn-sm btn-danger">delete</a>
                    <a href="/employee?id=<%= item._id %>" class="btn btn-sm btn-warning">view</a>
                    <a href="/update-employee?id=<%= item._id %>" class="btn btn-sm btn-primary">update</a>
                  </td>
                </tr>
             <% }) %>

        </table>
    </div>
    
</body>

</html>